# =====================================================
# Backend Configuration
# =====================================================

# Database Connection String
# Формат: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:PASSWORD@localhost:5432/news_aggregator?schema=public"

# JWT Secrets (обязательно заменить на уникальные значения в продакшене)
# Используйте криптографически стойкие случайные строки
# Например, можно сгенерировать: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET="change-me-access"
JWT_REFRESH_SECRET="change-me-refresh"

# JWT Expiration
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Server
PORT=3000
NODE_ENV="development"

# Client URL (for CORS)
CLIENT_URL="http://localhost:5173"

# Admin User (for seeding)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"
